html
	include includes/header.pug

	body
		div.container
			//- deleted #loggedin
			div
				div#user-profile
					h1 Logged in as #{user.display_name}
					div.media
						div.pull-left
							img.media-object(width='150', src="" + user.profile_image)
						div.media-body
							dl.dl-horizontal
								dt Display name
									dd #{user.display_name}
								dt Id
									dd #{user.spotify_id}
								dt Email
									dd #{user.email}
								dt Spotify URI
									dd #{user.uri}
								dt Country
									dd #{user.country}
				//- div#oauth
				//- button.btn.btn-default#obtain-new-token Obtain new token using the refresh token
				a.btn.btn-primary(href="/logout") End jukebox

		include includes/footer.pug
